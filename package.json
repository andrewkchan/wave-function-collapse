{
  "name": "wave-function-collapse",
  "version": "1.0.0",
  "description": "Reimplementation of Maxim Gumin's Wave Function Collapse algorithm for educational purposes",
  "main": "index.js",
  "dependencies": {
    "esbuild": "^0.16.13",
    "npm-watch": "^0.11.0",
    "typescript": "4.5.5"
  },
  "scripts": {
    "build": "esbuild --bundle --sourcemap --outfile=index.js --platform=browser index.ts",
    "dev": "npm-watch build"
  },
  "watch": {
    "build": {
      "patterns": ["index.ts", "model.ts"],
      "verbose": true
    }
  },
  "author": "andrewkchan",
  "license": "MIT"
}
